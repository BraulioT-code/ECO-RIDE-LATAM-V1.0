{
  "realm": "ecoride",
  "enabled": true,
  "roles": {
    "realm": [
      {
        "name": "ROLE_ADMIN",
        "description": "Administrador del sistema"
      },
      {
        "name": "ROLE_DRIVER",
        "description": "Rol de conductor"
      },
      {
        "name": "ROLE_PASSENGER",
        "description": "Rol de pasajero"
      }
    ]
  },
  "clients": [
    {
      "clientId": "eco-gateway",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": ["+"],
      "protocol": "openid-connect",
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false
    },
    {
      "clientId": "eco-internal",
      "enabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "clientAuthenticatorType": "client-secret",
      "secret": "my-internal-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false
    }
  ]
}